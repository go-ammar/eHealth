<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        tools:context=".presentation.ui.patients.GiveFeedbackFragment">

        <include
            layout="@layout/top_bar"
            android:id="@+id/heading"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="true"
            app:layout_constraintBottom_toTopOf="@id/sendFeedbackBtn"
            app:layout_constraintTop_toBottomOf="@id/heading"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/headingTv"
                    style="@style/TextViewHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_extra_large"
                    android:gravity="center"
                    android:padding="@dimen/margin_medium"
                    android:text="How was your experience"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:stepSize="1"
                    android:progressTint="@color/redOnBlack"
                    android:progressBackgroundTint="@color/greyNormal"
                    android:secondaryProgressTint="@color/grey_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/headingTv" />


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/standard_margin_start"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ratingBar">

                    <TextView
                        android:id="@+id/writeYourFeedbackTv"
                        style="@style/TextViewMediumMainBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write your feedback" />

                    <EditText
                        android:id="@+id/feedbackEt"
                        style="@style/EditTextMainBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:background="@drawable/shape_edittext"
                        android:gravity="start"
                        android:hint="Type your feedback here"
                        android:maxLines="4"
                        android:minLines="4"
                        android:padding="@dimen/margin_normal"
                        android:scrollIndicators="end" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendFeedbackBtn"
            style="@style/ButtonPrimaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard_margin_start"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/standard_margin_start"
            android:alpha="0.4"
            android:enabled="false"
            android:background="@drawable/rounded_button_primary"
            android:paddingVertical="@dimen/margin_normal"
            android:text="Send Feedback"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>