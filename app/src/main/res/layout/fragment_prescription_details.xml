<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:context=".presentation.ui.PrescriptionDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <TextView
                    android:id="@+id/doctorTv"
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescribed by Ammar Ahsan" />

                <TextView
                    android:id="@+id/medicineTv"
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brexin"/>

                <TextView
                    android:id="@+id/detailsTv"
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 with water"
                    />

                <TextView
                    android:id="@+id/dosage"
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 in the morning 1 at night"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appointmentsBtn"
                style="@style/ButtonPrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/rounded_button_primary"
                android:text="Contact Doctor"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>