<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileData"
            type="com.project.projecte_health.data.local.users.model.ProfileModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:context=".presentation.ui.patients.EditProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/topBar"
                layout="@layout/top_bar" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@id/topBar">

                <TextView
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:text="Height" />

                <EditText
                    android:id="@+id/heightEt"
                    style="@style/EditTextMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="Enter your height in cm"
                    android:maxLines="1"
                    android:text="@{profileData.height}" />

                <TextView
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:text="Blood Type" />

                <EditText
                    android:id="@+id/bloodTypeEt"
                    style="@style/EditTextMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="Enter your Blood Type"
                    android:maxLines="1"
                    android:text="@{profileData.bloodType}" />

                <TextView
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:text="Weight" />

                <EditText
                    android:id="@+id/weightEt"
                    style="@style/EditTextMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="Enter your weight in kgs"
                    android:maxLines="1"
                    android:text="@{profileData.weight}" />

                <TextView
                    style="@style/TextViewMediumMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:text="Allergies" />

                <EditText
                    android:id="@+id/allergiesEt"
                    style="@style/EditTextMainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="Enter your Allergies"
                    android:maxLines="1"
                    android:text="@{profileData.allergies}" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveBtn"
                style="@style/ButtonPrimaryText"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:layout_marginTop="@dimen/standard_margin_end"
                android:background="@drawable/rounded_button_primary"
                android:padding="@dimen/margin_large"
                android:text="Save Profile"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>