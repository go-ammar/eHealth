<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonPrimaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSecondaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextViewMediumMainBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewMainBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/x_large_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSubHeading">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextMainBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#949499</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:background">@drawable/shape_edittext</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textStyle">normal</item></style>

    <style name="BottomAppBarShape">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="TextViewMediumHeadingPrimary">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/redOnBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/redOnBlack</item>
    </style>

</resources>