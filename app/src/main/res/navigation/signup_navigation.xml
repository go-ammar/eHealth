<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_navigation"
    app:startDestination="@id/signupFragment">

    <fragment
        android:id="@+id/signupFragment"
        tools:layout="@layout/fragment_signup"
        android:name="com.project.projecte_health.presentation.ui.registration.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_patientInfoSignupFragment"
            app:destination="@id/patientInfoSignupFragment" />
    </fragment>
    <fragment
        android:id="@+id/patientInfoFragment"
        android:name="com.project.projecte_health.presentation.ui.registration.PatientInfoFragment"
        android:label="fragment_patient_info"
        tools:layout="@layout/fragment_patient_info" >
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <argument
            android:name="userType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/patientInfoSignupFragment"
        android:name="com.project.projecte_health.presentation.ui.registration.PatientInfoSignupFragment"
        android:label="PatientInfoSignupFragment"
        tools:layout="@layout/fragment_patient_info_signup">
        <action
            android:id="@+id/action_patientInfoSignupFragment_to_patientInfoFragment"
            app:destination="@id/patientInfoFragment" >

        </action>
        <argument
            android:name="userType"
            app:argType="string" />
    </fragment>
</navigation>