<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doc_appointment_nav_graph"
    app:startDestination="@id/doctorAppointmentListFragment">

    <fragment
        android:id="@+id/doctorAppointmentListFragment"
        android:name="com.project.projecte_health.presentation.ui.doctors.DoctorAppointmentListFragment"
        android:label="DoctorAppointmentListFragment"
        tools:layout="@layout/fragment_doctor_appointment_list">
        <action
            android:id="@+id/action_doctorAppointmentListFragment_to_doctorAppointmentDetailFragment"
            app:destination="@id/doctorAppointmentDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/doctorAppointmentDetailFragment"
        android:name="com.project.projecte_health.presentation.ui.doctors.DoctorAppointmentDetailFragment"
        android:label="DoctorAppointmentDetailFragment"
        tools:layout="@layout/fragment_doctor_appointment_detail">
        <argument
            android:name="appointmentdetail"
            app:argType="com.project.projecte_health.data.local.bookings.Appointment" />
        <action
            android:id="@+id/action_doctorAppointmentDetailFragment_to_doctorGivePrescriptionFragment"
            app:destination="@id/doctorGivePrescriptionFragment" />
        <argument
            android:name="isInPast"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/doctorGivePrescriptionFragment"
        android:name="com.project.projecte_health.presentation.ui.doctors.DoctorGivePrescriptionFragment"
        android:label="DoctorGivePrescriptionFragment" >
        <argument
            android:name="patientId"
            app:argType="string" />
    </fragment>
</navigation>